<!DOCTYPE html>
<html>
	<head>
	  <title>Mc Dave Valdecantos</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<div class="container">
		  <% flash.each do |key, value| %>
		        <%= content_tag(:div, value, class: "alert alert-#{flash_class(key)}") %>
		  <% end %>
		<%= yield %>
		<%= render 'layouts/footer' %>
		</div>
	</body>
</html>
